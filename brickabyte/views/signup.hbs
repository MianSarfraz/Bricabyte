    {{! SIGNUP }}

  <div class="login grid" id="login-content">
    <form class="signup__form grid">
        <h3 class="login__title">Sign Up</h3>

        <div class="login__group grid">
            <div>
                <label for="firstName" class="login__label">First Name</label>
                <input
                    type="text"
                    placeholder="Enter your first name"
                    id="firstName"
                    name="firstName"
                    class="login__input"
                />
                <div id="firstNameError" class="error"></div> 
            </div>

            <div>
                <label for="lastName" class="login__label">Last Name</label>
                <input
                    type="text"
                    placeholder="Enter your last name"
                    id="lastName"
                    name="lastName"
                    class="login__input"
                />
                <div id="lastNameError" class="error"></div> 
            </div>

            <div>
                <label for="email" class="login__label">Email</label>
                <input
                    type="email"
                    placeholder="Enter your email"
                    id="email"
                    name="email"
                    class="login__input"
                />
                <div id="emailError" class="error"></div> 
            </div>

            <div>
                <label for="phone" class="login__label">Phone Number</label>
                <input
                    type="tel"
                    placeholder="Enter your phone number"
                    id="phone"
                    name="phone"
                    class="login__input"
                />
                <div id="phoneError" class="error"></div> 
            </div>

            <div>
                <label for="password" class="login__label">Password</label>
                <div class="password-input-container">
                    <input
                        type="password"
                        placeholder="Enter your password"
                        id="password"
                        class="login__input"
                        name="password"
                    />
                    <span
                        class="password-toggle"
                        onclick="togglePasswordVisibility('password')"
                    >Show</span>
                </div>
                <div id="passwordError" class="error"></div> 
            </div>

            <div>
                <label for="confirmPassword" class="login__label">Confirm Password</label>
                <div class="password-input-container">
                    <input
                        type="password"
                        placeholder="Confirm your password"
                        id="confirmPassword"
                        name="confirmPassword"
                        class="login__input"
                    />
                    <span
                        class="password-toggle"
                        onclick="togglePasswordVisibility('signup-confirm-pass')"
                    >Show</span>
                </div>
                <div id="confirmPasswordError" class="error"></div> 
            </div>

        </div>

        <div>
            <button
                type="submit"
                class="signup__button login__button button"
            >Sign Up</button>
        </div>

        <span class="login__signup">
            You have an account?
            <a href="/login" id="login-link">Log In</a>
        </span>
    </form>
</div>


